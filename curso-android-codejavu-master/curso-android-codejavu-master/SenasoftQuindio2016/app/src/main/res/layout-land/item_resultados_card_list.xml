<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"  >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardViewResultados"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        card_view:cardBackgroundColor="@color/colorBtnGplus"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txtRegional"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quindio"
                    android:textColor="@color/colorPrimaryVersion1"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:id="@+id/txtNombreCentro"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Centro comercio y turismo"
                    android:textColor="@color/colorPrimaryVersion1"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="0dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PUESTO"
                android:textColor="@color/colorPrimaryVersion1"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="false"
                android:layout_alignParentEnd="false"
                android:gravity="right"
                android:textStyle="bold"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/txtPuesto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/colorPrimaryVersion1"
                android:textSize="50dp"
                android:layout_alignParentRight="false"
                android:layout_alignParentEnd="false"
                android:gravity="right"
                android:layout_marginRight="10dp"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>