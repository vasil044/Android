<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardViewDia"
        card_view:cardBackgroundColor="@color/colorBtnGplus"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvHora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="07:00 am - 01:00 pm"
                    android:textColor="@color/colorPrimaryVersion1"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvLugar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Salon 1"
                    android:textSize="15dp"
                    android:textColor="@color/colorPrimaryVersion1"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:textStyle="bold"
                    android:gravity="right" />

            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tema"
                android:textStyle="bold"
                android:textSize="13dp"
                android:layout_marginRight="20dp" />

            <TextView
                android:id="@+id/tvTema"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Especialización Regional Inteligente. Politica de Transformación Digital para los sectores estratégicos del País a través de la Industria TI"
                android:textSize="13dp"
                android:layout_marginRight="20dp" />

            <TextView
                android:id="@+id/textConferencista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Conferencista"
                android:textSize="13dp"
                android:textStyle="bold"
                android:layout_marginRight="20dp" />

            <TextView
                android:id="@+id/tvConferencista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lina Taborda Directora de Politicas y Desarrollo TI del Ministerio TIC"
                android:textSize="13dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"/>

    </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>