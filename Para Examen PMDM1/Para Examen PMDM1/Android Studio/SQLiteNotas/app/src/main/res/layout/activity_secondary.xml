<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:orientation="vertical">

    <TextView
        android:id="@+id/labelActSecond"
        android:layout_width="69dp"
        android:layout_height="36dp"
        android:layout_x="28dp"
        android:layout_y="16dp"
        android:text="Tipo"
        android:textColor="@android:color/background_light"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="266dp"
        android:layout_height="40dp"
        android:layout_x="94dp"
        android:layout_y="13dp"
        android:background="@android:color/background_light" />

    <Button
        android:id="@+id/buttonAceptar"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:layout_x="66dp"
        android:layout_y="441dp"
        android:background="@android:color/holo_orange_dark"
        android:text="Aceptar" />

    <TextView
        android:id="@+id/textViewInferior"
        android:layout_width="308dp"
        android:layout_height="35dp"
        android:layout_x="13dp"
        android:layout_y="402dp"
        android:text="Para guardar cambios, pulse 'Aceptar'."
        android:textColor="@android:color/background_light" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="348dp"
        android:layout_height="264dp"
        android:layout_x="18dp"
        android:layout_y="127dp"
        android:background="@android:color/background_light"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_x="20dp"
        android:layout_y="78dp"
        android:background="@android:color/background_light"
        android:textColor="@android:color/black" />
</AbsoluteLayout>